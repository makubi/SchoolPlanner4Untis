<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="background_layout" parent="android:Theme.Light">
		<item name="android:background">@color/background</item>
		<item name="android:textColor">@color/text</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
	</style>

	<style name="header_text">
		<item name="android:textSize">25sp</item>
		<item name="android:textColor">@color/header_text</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center_vertical|left</item>
	</style>

	<style name="statusBarDelimiter">
		<item name="android:layout_height">1dip</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:background">@color/delimiter</item>
	</style>

	<style name="statusBarText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">@color/text</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:layout_gravity">left|center_vertical</item>
	</style>

	<style name="statusBarProgress" parent="@android:style/Widget.ProgressBar.Inverse">
		<item name="android:visibility">invisible</item>
		<item name="android:paddingRight">5dip</item>
		<item name="android:layout_height">20dip</item>
		<item name="android:layout_width">25dip</item>
	</style>
	<!-- <style name="selectScreenRow"> <item name="android:orientation">horizontal</item> 
		<item name="android:layout_width">wrap_content</item> <item name="android:layout_height">wrap_content</item> 
		</style> -->

	<style name="selectScreenBox">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/border</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="selectScreenBoxImage">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:clickable">true</item>
		<item name="android:paddingBottom">25dip</item>
		<item name="android:paddingLeft">25dip</item>
		<item name="android:paddingRight">25dip</item>
		<item name="android:paddingTop">25dip</item>
	</style>

	<style name="selectScreenBoxSpinner">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="selectScreenHeader">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">26dip</item>
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
	</style>

	<style name="info_dialog_head">
		<item name="android:textSize">30sp</item>
		<item name="android:paddingBottom">0dip</item>
	</style>

	<style name="info_dialog_head_land">
		<item name="android:textSize">30sp</item>
		<item name="android:paddingBottom">0dip</item>
	</style>

	<style name="info_dialog_version">
		<item name="android:textSize">12sp</item>
		<item name="android:paddingBottom">20dip</item>
	</style>

	<style name="info_dialog_version_land">
		<item name="android:textSize">12sp</item>
		<item name="android:paddingBottom">5dip</item>
	</style>

	<style name="info_dialog_text">
		<item name="android:textSize">15sp</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingTop">5dip</item>
		<item name="android:paddingBottom">5dip</item>
	</style>

	<style name="info_dialog_text_land">
		<item name="android:textSize">15sp</item>
		<item name="android:paddingLeft">5dip</item>
		<item name="android:paddingTop">0dip</item>
		<item name="android:paddingBottom">0dip</item>
	</style>

	<style name="full_height_dialog" parent="android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="login_set_dialog_text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="login_set_dialog_input">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:inputType">text</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="delimiter">
		<item name="android:layout_height">1dip</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:background">@color/delimiter</item>
	</style>

	<style name="baa_seperator">
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_width">1dip</item>
		<item name="android:background">#29000000</item>
	</style>

	<style name="baa_icon">
		<item name="android:layout_height">@dimen/gui_actionbar_width_height_item</item>
		<item name="android:layout_width">@dimen/gui_actionbar_width_height_item</item>
		<item name="android:paddingRight">@dimen/gui_actionbar_item_margin</item>
		<item name="android:paddingLeft">@dimen/gui_actionbar_item_margin</item>
		<item name="android:clickable">true</item>
	</style>
	
	<style name="startup_wizard_login_information_input">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:inputType">text</item> 
	</style>
	
	<style name="startup_wizard_button_bar">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_alignParentBottom">true</item>
		<item name="android:background">@color/background</item>
	</style>
	
	<style name="startup_wizard_scroll_view" parent="@style/background_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<!-- Im Landscape-Mode liegt die 'startup_wizard_button_bar' ueber der ScrollView -->
		<item name="android:layout_marginBottom">50dip</item>
	</style>
	
	<style name="startup_wizard_login_information_check_image">
		<item name="android:layout_width">30dip</item>
		<item name="android:layout_height">30dip</item>
	</style>

</resources>
